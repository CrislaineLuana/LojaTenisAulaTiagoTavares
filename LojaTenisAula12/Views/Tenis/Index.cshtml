@model IEnumerable<TenisModel>


@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-dark" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}


<div class="container mt-5">

    <div class="btn-box d-flex justify-content-between align-items-center mb-3">
        <h2>Cadastro de Tênis!</h2>
        <a class="btn btn-success" asp-action="Cadastrar" asp-controller="Tenis"><i class="bi bi-plus-circle"></i>  Cadastrar novo tênis</a>
    </div>

    <table class="table table-hover" id="registros" style="width: 1024;">
        <thead>
            <tr>
                <th></th>
                <th>Nome</th>
                <th>Marca</th>
                <th>Valor</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            
            @if (Model != null)
            {
                @if (Model.Count() > 0)
                {
                    @foreach (var tenis in Model)
                    {

                        <tr>
                            @if (tenis.Foto != null)
                            {
                                <td>
                                    <img src="imagem/@tenis.Foto" style="width:50px; height: 50px" />
                                </td>
                            }
                            else
                            {
                                <td>
                                </td>
                            }
                            <td><i class="bi bi-people"></i>@tenis.Nome</td>
                            <td>@tenis.Marca</td>
                            <td>R$ @tenis.Valor</td>
                            <td>
                                <a class="btn btn-info" asp-action="Editar" asp-controller="Tenis" asp-route-id="@tenis.Id"><i class="bi bi-pencil"></i>Editar</a>
                            </td>
                        </tr>
                    }

                }
                else
                {
                    <tr><td colspan="6" class="text-center">Sem Tenis Registrados!</td></tr>
                }

            }

        </tbody>
    </table>
</div>