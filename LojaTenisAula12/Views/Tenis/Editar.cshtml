@model TenisModel


<div class="container mt-5">
    <form method="post" asp-action="Editar" asp-controller="Tenis" enctype="multipart/form-data">
        <h2>Edição de tenis - @Model.Nome</h2>

        <input type="hidden" asp-for="Id" />

        @if (Model.Foto != null)
        {
            <div class="text-center">
                <label for="ImageFile">
                    <img src="/Imagem/@Model.Foto" id="img" style="width:150px; height:200px" />
                </label>
            </div>

        }


        <input type="hidden" asp-for="Foto" />
        <div class="mb-1">
            <label class="form-label mt-3">Foto:</label>
            <input type="file" id="ImageFile" name="foto" class="form-control shadow-none" asp-for="Foto" />
        </div>

        <div class="mb-1">
            <label class="form-label">Nome:</label>
            <input type="text" asp-for="Nome" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>
        <div class="mb-1">
            <label class="form-label">Marca:</label>
            <input type="text" asp-for="Marca" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="Marca"></span>
        </div>
        <div class="mb-1">
            <label class="form-label">Valor:</label>
            <input type="number" min="1" step="any" asp-for="Valor" class="form-control shadow-none">
            <span class="text-danger" asp-validation-for="Valor"></span>
        </div>



        <div class="btn-box d-flex mt-3">
            <button type="submit" type="button" class="btn btn-success w-50 mx-1"><i class="bi bi-plus-circle"></i> Editar!</button>
            <a type="submit" class="btn btn-info w-50" asp-controller="Tenis" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Voltar</a>
        </div>

    </form>
</div>



<script>


    const inputFile = document.querySelector("#ImageFile");

    inputFile.addEventListener("change", function (e) {
        const inputTarget = e.target;
        const file = inputTarget.files[0];

        if (file) {
            const reader = new FileReader();

            reader.addEventListener("load", function (e) {
                const readerTarget = e.target;
                const img = document.querySelector("#img");
                img.src = readerTarget.result;

                const figcaption = document.querySelector("#figcaption");
                figcaption.innerHTML = file.name;
            });

            reader.readAsDataURL(file);
        }
    }


    )
</script>